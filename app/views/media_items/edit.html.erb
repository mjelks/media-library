<div class="max-w-2xl">
  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">Edit Media Item</h1>
    <%= button_to "Clone", clone_media_item_path(@media_item),
        method: :post,
        class: "rounded-md px-3.5 py-2.5 bg-green-600 hover:bg-green-500 text-white font-medium cursor-pointer",
        data: { turbo_confirm: "Clone this media item? You'll be redirected to edit the copy." } %>
  </div>
  <%= render "form" %>
</div>
