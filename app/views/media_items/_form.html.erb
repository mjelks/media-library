<%= form_with model: @media_item, class: "space-y-6", data: { controller: "location-filter", "location-filter-locations-value": @locations.map { |l| { id: l.id, name: l.name, media_type_id: l.media_type_id, max_slot_position: @max_slot_positions&.dig(l.id) } }.to_json, "location-filter-cd-media-type-id-value": @cd_media_type_id } do |form| %>
  <% if @media_item.errors.any? %>
    <div class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md">
      <h2><%= pluralize(@media_item.errors.count, "error") %> prohibited this media item from being saved:</h2>
      <ul class="list-disc list-inside">
        <% @media_item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :release_id, "Release", class: "block text-sm font-medium text-gray-700" %>
    <%= form.collection_select :release_id, @releases, :id, ->(r) { "#{r.title} - #{r.media_owner.name}" },
        { prompt: "Select a release" },
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.label :media_type_id, "Format", class: "block text-sm font-medium text-gray-700" %>
    <%= form.collection_select :media_type_id, @media_types, :id, :name,
        { prompt: "Select a format" },
        { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500",
          data: { "location-filter-target": "mediaType", action: "change->location-filter#filterLocations" } } %>
  </div>

  <div>
    <%= form.label :year, "Year (of this pressing/release)", class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :year, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", min: 1900, max: Date.current.year + 1 %>
  </div>

  <div>
    <%= form.label :play_count, "Play Count", class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :play_count, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", min: 0 %>
  </div>

  <div>
    <%= form.label :last_played, "Last Played", class: "block text-sm font-medium text-gray-700" %>
    <%= form.datetime_local_field :last_played, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.label :item_count, "Number of Records", class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :item_count, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", min: 1 %>
  </div>

  <div>
    <%= form.label :disc_number, "Disc Number", class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :disc_number, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", min: 1, placeholder: "Leave blank for single-disc releases" %>
  </div>

  <div>
    <%= form.label :additional_info, "Additional Info", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :additional_info, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "e.g., (Disc 1), (Disc 2)..." %>
  </div>

  <div>
    <%= form.label :location_id, "Location", class: "block text-sm font-medium text-gray-700" %>
    <%= form.collection_select :location_id, @locations, :id, :name,
        { prompt: "Select a location", include_blank: true },
        { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500",
          data: { "location-filter-target": "location", action: "change->location-filter#onLocationChange" } } %>
  </div>

  <div data-location-filter-target="slotPositionWrapper" style="<%= 'display: none' unless @media_item.media_type&.name == 'CD' %>">
    <%= form.label :slot_position, "Slot Position", class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :slot_position, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", min: 1, placeholder: "Leave blank to keep unassigned" %>
    <p class="mt-1 text-sm text-gray-500" data-location-filter-target="slotPositionHint"></p>
  </div>

  <div>
    <%= form.label :notes, "Notes (format-specific)", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :notes, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "e.g., Limited edition, Original pressing, Promo copy..." %>
  </div>

  <div>
    <%= form.label :artwork, "Artwork", class: "block text-sm font-medium text-gray-700" %>
    <%= form.file_field :artwork, class: "mt-1 block w-full" %>
    <% if @media_item.artwork.attached? %>
      <div class="mt-2">
        <%= image_tag @media_item.artwork, class: "w-32 h-32 object-cover rounded" %>
      </div>
    <% end %>
  </div>

  <div class="flex gap-2">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-medium cursor-pointer" %>
    <%= link_to "Cancel", media_items_path, class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 font-medium" %>
  </div>
<% end %>
