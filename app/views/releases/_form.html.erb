<%= form_with model: @release, class: "space-y-6" do |form| %>
  <% if @release.errors.any? %>
    <div class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md">
      <h2><%= pluralize(@release.errors.count, "error") %> prohibited this release from being saved:</h2>
      <ul class="list-disc list-inside">
        <% @release.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.label :media_owner_id, "Artist/Owner", class: "block text-sm font-medium text-gray-700" %>
    <%= form.collection_select :media_owner_id, @media_owners, :id, :name,
        { prompt: "Select an artist/owner" },
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.label :original_year, "Original Year", class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :original_year, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", min: 1900, max: Date.current.year + 1 %>
  </div>

  <div>
    <%= form.label :genre_ids, "Genres", class: "block text-sm font-medium text-gray-700" %>
    <%= form.collection_check_boxes :genre_ids, @genres, :id, :name do |b| %>
      <div class="inline-flex items-center mr-4">
        <%= b.check_box class: "rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
        <%= b.label class: "ml-2 text-gray-700" %>
      </div>
    <% end %>
  </div>

  <div>
    <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :description, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.label :additional_info, "Additional Info", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :additional_info, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
  </div>

  <div class="flex gap-2">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-medium cursor-pointer" %>
    <%= link_to "Cancel", releases_path, class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 font-medium" %>
  </div>
<% end %>
