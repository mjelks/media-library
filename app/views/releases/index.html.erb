<div>
  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">Releases</h1>
    <%= link_to "Add New", new_release_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
  </div>

  <div class="space-y-4">
    <% @releases.each do |release| %>
      <%= link_to release do %>
        <div class="p-4 hover:bg-gray-100 rounded-lg border">
          <p class="font-semibold text-lg"><%= release.title %></p>
          <p class="text-gray-600"><%= release.media_owner.name %></p>
          <div class="flex gap-4 text-sm text-gray-500 mt-1">
            <% if release.original_year %>
              <span><%= release.original_year %></span>
            <% end %>
            <% if release.genres.any? %>
              <span><%= release.genres.map(&:name).join(", ") %></span>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
