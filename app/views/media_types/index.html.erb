<% content_for :title, "Media types" %>

<div class="p-4">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Media types</h1>
    <%= link_to "New media type", new_media_type_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="media_types" class="min-w-full">
    <% if @media_types.any? %>
      <% @media_types.each do |media_type| %>
        <%= render media_type %>
        <p>
          <%= link_to "Show this media type", media_type, class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
        </p>
      <% end %>
    <% else %>
      <p class="text-center my-10">No media types found.</p>
    <% end %>
  </div>
</div>
