<div class="max-w-4xl mx-auto px-4 py-8">
  <%= link_to "← Back to Search", discogs_path, class: "text-blue-600 hover:text-blue-800 mb-6 inline-block" %>

  <% if @release && !@release["error"] %>
    <div class="bg-white rounded-lg shadow-lg p-6">
      <div class="flex gap-6 mb-6">
        <% if @release["images"].present? && @release["images"].first %>
          <div class="flex-shrink-0">
            <%= image_tag @release["images"].first["uri"],
              alt: @release["title"],
              class: "w-64 h-64 object-cover rounded-lg shadow-md" %>
          </div>
        <% end %>

        <div class="flex-1">
          <h1 class="font-bold text-4xl mb-4"><%= @release["title"] %></h1>

          <div class="space-y-2 text-gray-700">
            <% if @release["artists"].present? %>
              <p><strong>Artist:</strong>
                <%= @release["artists"].map { |a| a["name"] }.join(", ") %>
              </p>
            <% end %>

            <% if @release["year"].present? %>
              <p><strong>Year:</strong> <%= @release["year"] %></p>
            <% end %>

            <% if @release["labels"].present? %>
              <p><strong>Label:</strong>
                <%= @release["labels"].map { |l| "#{l["name"]} (#{l["catno"]})" }.join(", ") %>
              </p>
            <% end %>

            <% if @release["formats"].present? %>
              <p><strong>Format:</strong>
                <%= @release["formats"].map { |f| "#{f["name"]} (#{f["qty"]})" }.join(", ") %>
              </p>
            <% end %>

            <% if @release["genres"].present? %>
              <p><strong>Genres:</strong> <%= @release["genres"].join(", ") %></p>
            <% end %>

            <% if @release["styles"].present? %>
              <p><strong>Styles:</strong> <%= @release["styles"].join(", ") %></p>
            <% end %>

            <% if @release["country"].present? %>
              <p><strong>Country:</strong> <%= @release["country"] %></p>
            <% end %>
          </div>
        </div>
      </div>

      <% if @release["tracklist"].present? %>
        <div class="mt-6">
          <h2 class="font-bold text-2xl mb-4">Tracklist</h2>
          <div class="space-y-2">
            <% @release["tracklist"].each do |track| %>
              <div class="flex gap-4 py-2 border-b border-gray-200">
                <div class="w-12 text-gray-600"><%= track["position"] %></div>
                <div class="flex-1">
                  <span class="font-medium"><%= track["title"] %></span>
                  <% if track["duration"].present? %>
                    <span class="text-gray-500 ml-2">(<%= track["duration"] %>)</span>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <% if @release["uri"].present? %>
        <div class="mt-6 pt-6 border-t border-gray-200">
          <%= link_to "View on Discogs →",
            @release["uri"],
            target: "_blank",
            class: "text-blue-600 hover:text-blue-800" %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
