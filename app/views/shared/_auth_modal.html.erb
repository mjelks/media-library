<div id="modal" data-controller="modal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center">
  <div class="bg-gray-800 rounded-lg max-w-md w-full p-6 relative">
    <!-- Close Button -->
    <%= link_to root_url, data: { action: "modal#hide" }, class: "absolute top-4 right-4 text-gray-400 hover:text-white" do %>
      &times;
    <% end %>
    <!-- Tabs -->
    <div class="flex mb-6">
      <button data-action="modal#switchTab"
              data-tab="login"
              data-modal-target="tab"
              class="modal-tab tab-header selected">
        Login
      </button>
      <button data-action="modal#switchTab"
              data-tab="signup"
              data-modal-target="tab"
              class="modal-tab tab-header">
        Sign Up
      </button>
      <button data-action="modal#switchTab"
              data-tab="password"
              data-modal-target="tab"
              class="modal-tab tab-header">
        Forgot?
      </button>
    </div>

    <!-- Content -->
    <div data-modal-target="content" id="login">
      <%= render partial: "sessions/new" %>
    </div>
    <div data-modal-target="content" id="signup" class="hidden">
      <%= render partial: "registrations/new" %>
    </div>
    <div data-modal-target="content" id="password" class="hidden">
      <%= render partial: "passwords/new" %>
    </div>
  </div>
</div>
