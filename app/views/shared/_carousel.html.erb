<div class="container mx-auto px-4 py-8">
  <h2 class="text-2xl font-bold mb-6">Recently Added</h2>

  <div class="relative">
    <div class="carousel flex overflow-x-auto snap-x snap-mandatory space-x-4 pb-4">
      <% @carousel_albums.each do |album| %>
        <div class="carousel-item flex-shrink-0 w-48 snap-start">
          <div class="bg-gray-800 rounded-lg p-4 hover:bg-gray-700 transition">
            <%= image_tag album.release.cover_image.attached? ? url_for(album.release.cover_image) : "placeholder.jpg",
              alt: album.title,
              class: "w-full h-48 object-cover rounded-lg mb-3" %>
            <h3 class="font-semibold truncate"><%= album.title %></h3>
            <p class="text-gray-400 text-sm truncate"><%= album.media_owner&.name %></p>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Navigation Buttons -->
    <button class="carousel-prev absolute left-0 top-1/2 -translate-y-1/2 bg-gray-800 p-3 rounded-full hover:bg-gray-700 hidden md:block">
      &lt;
    </button>
    <button class="carousel-next absolute right-0 top-1/2 -translate-y-1/2 bg-gray-800 p-3 rounded-full hover:bg-gray-700 hidden md:block">
      &gt;
    </button>
  </div>
</div>
