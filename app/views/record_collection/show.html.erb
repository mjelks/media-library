<% content_for :title, @location.name %>

<div class="p-4 w-full max-w-6xl mx-auto">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="font-bold text-4xl"><%= @location.name %></h1>
      <p class="text-gray-500 mt-1">
        <%= pluralize(@media_items.count, "record") %> in this location
      </p>
    </div>
    <div class="flex gap-2">
      <%= link_to "Back to Collection", record_collection_path,
          class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-200 font-medium" %>
      <%= link_to "Add to Collection", record_collection_add_path(@location),
          class: "rounded-md px-3.5 py-2.5 bg-green-600 hover:bg-green-500 text-white font-medium" %>
    </div>
  </div>

  <!-- Skeuomorphic Record Spine Shelf -->
  <% if @media_items.any? %>
    <%= render partial: "record_collection/record_spines", locals: { media_items: @media_items } %>
  <% end %>

  <div id="media-item-sorter">
    <%= render partial: "record_collection/record_sorter", locals: { media_items: @media_items, location: @location } %>
  </div>
</div>
