<div>
  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">Genres</h1>
    <%= link_to "Add New", new_genre_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
  </div>

  <div class="flex flex-wrap gap-2">
    <% @genres.each do |genre| %>
      <%= link_to genre do %>
        <span class="inline-block px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-full font-medium">
          <%= genre.name %>
          <span class="text-gray-500 text-sm">(<%= genre.releases.count %>)</span>
        </span>
      <% end %>
    <% end %>
  </div>
</div>
