<% content_for :title, "Now Playing" %>

<div class="py-4 w-full">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="font-bold text-4xl">Now Playing</h1>
      <p class="text-gray-500 mt-1">Search your collection and track what you're listening to</p>
    </div>
    <div class="flex items-center gap-4">
      <%= link_to "Back to Collection", record_collection_path,
          class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-200 font-medium" %>
    </div>
  </div>

  <!-- Search with Autocomplete -->
  <div class="mb-8" data-controller="now-playing-search media-type-toggle"
       data-now-playing-search-url-value="<%= now_playing_search_path %>"
       data-now-playing-search-random-url-value="<%= now_playing_random_path %>"
       data-media-type-toggle-current-value="<%= @media_type %>">
    <div class="relative flex gap-2">
      <input type="text"
             data-now-playing-search-target="input"
             data-action="input->now-playing-search#search keydown->now-playing-search#handleKeydown"
             placeholder="Search by artist or album title..."
             autocomplete="off"
             class="flex-1 px-4 py-3 text-lg border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
      <!-- Media Type Selector -->
      <div class="flex rounded-lg overflow-hidden border border-gray-300">
        <button type="button"
                data-media-type-toggle-target="button"
                data-now-playing-search-target="mediaTypeButton"
                data-media-type="Vinyl"
                data-action="click->media-type-toggle#select"
                class="px-4 py-3 font-medium text-sm transition-colors">
          Vinyl
        </button>
        <button type="button"
                data-media-type-toggle-target="button"
                data-now-playing-search-target="mediaTypeButton"
                data-media-type="CD"
                data-action="click->media-type-toggle#select"
                class="px-4 py-3 font-medium text-sm transition-colors">
          CD
        </button>
      </div>
      <button type="button"
              data-action="click->now-playing-search#fetchRandom"
              class="px-4 py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg whitespace-nowrap">
        Pick Random
      </button>

      <!-- Results dropdown -->
      <div data-now-playing-search-target="results"
           class="absolute z-10 left-0 right-16 mt-14 bg-white border border-gray-300 rounded-lg shadow-lg hidden">
      </div>
    </div>
  </div>

  <!-- Now Playing Section (within last 60 minutes) -->
  <% if @now_playing %>
    <div class="mb-8" id="now-playing-section" data-controller="now-playing-card" data-now-playing-card-confirm-url-value="<%= now_playing_confirm_path(@now_playing) %>">
      <h2 class="font-bold text-2xl mb-4 text-stone-700">Now Playing</h2>
      <div class="relative bg-gradient-to-r from-blue-50 to-indigo-50 rounded-xl p-6 shadow-lg border border-blue-100 transition-opacity duration-300" data-now-playing-card-target="card">
        <!-- Close/Confirm buttons in upper right -->
        <%= render partial: "close_confirm_buttons", locals: { media_item: @now_playing } %>

        <!-- Confirmation Modal -->
        <div data-now-playing-card-target="modal" class="hidden absolute inset-0 bg-black/50 rounded-xl flex items-center justify-center z-20">
          <div class="bg-white rounded-lg p-6 shadow-xl max-w-sm mx-4">
            <p class="text-gray-800 font-medium text-center mb-4">Are you sure?</p>
            <p class="text-gray-500 text-sm text-center mb-6">This will remove the album and undo the play count.</p>
            <div class="flex gap-3 justify-center">
              <button type="button"
                      data-action="click->now-playing-card#hideConfirm"
                      class="px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium rounded-lg transition-colors">
                No
              </button>
              <button type="button"
                      data-action="click->now-playing-card#confirmDelete"
                      data-now-playing-card-url-param="<%= now_playing_delete_path(@now_playing) %>"
                      class="px-4 py-2 bg-red-500 hover:bg-red-600 text-white font-medium rounded-lg transition-colors">
                Yes
              </button>
            </div>
          </div>
        </div>

        <div class="flex items-center gap-6">
          <div class="flex-shrink-0 relative group/cover">
            <%= link_to media_item_path(@now_playing) do %>
              <% if @now_playing.release&.cover_image&.attached? %>
                <%= image_tag @now_playing.release.cover_image.variant(resize_to_limit: [150, 150]),
                    class: "w-36 h-36 object-cover rounded-lg shadow-lg" %>
              <% else %>
                <div class="w-36 h-36 bg-gray-200 rounded-lg flex items-center justify-center shadow-lg">
                  <svg class="w-12 h-12 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M18 3a1 1 0 00-1.196-.98l-10 2A1 1 0 006 5v9.114A4.369 4.369 0 005 14c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V7.82l8-1.6v5.894A4.37 4.37 0 0015 12c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V3z"/>
                  </svg>
                </div>
              <% end %>
            <% end %>
            <!-- Hover details popup -->
            <div class="absolute left-full top-0 ml-4 z-20 opacity-0 invisible group-hover/cover:opacity-100 group-hover/cover:visible transition-all duration-200 pointer-events-none">
              <%= render partial: "record_collection/media_item_hover_details", locals: { media_item: @now_playing } %>
            </div>
          </div>
          <div class="flex-1">
            <%= link_to edit_media_item_path(@now_playing), class: "block hover:opacity-80" do %>
              <h3 class="font-bold text-2xl text-gray-900"><%= @now_playing.display_title || "Unknown Album" %></h3>
              <p class="text-lg text-gray-600 mt-1"><%= @now_playing.release&.media_owner&.name || "Unknown Artist" %> 
                <span class="text-xs text-gray-600 mt-1">
                  (<%= duration_formatter(@now_playing.release&.duration) || "Unknown" %>)
                </span>
              </p>
            <% end %>
            <p class="text-sm text-gray-500 mt-2">
              Started <%= time_ago_in_words(@now_playing.last_played) %> ago
              <span class="mx-2">&middot;</span>
              <%= pluralize(@now_playing.play_count || 0, "play") %> total
              <span class="mx-2">&middot;</span>
              <% if @now_playing.media_type&.name == "CD" %>
                <span title="CD">üíø</span>
              <% else %>
                <span title="Vinyl" class="inline-flex items-center justify-center w-6 h-6 bg-gray-800 text-white text-xs font-bold rounded-full">LP</span>
              <% end %>
            </p>
            <% if @now_playing.location %>
              <%if @now_playing.media_type&.name == "Vinyl"  %>
                <%= link_to record_collection_location_path(@now_playing.location), class: "italic text-xs text-gray-600 hover:text-gray-800 hover:underline mt-1 inline-block" do %>
                  <% if @now_playing.location.cube_location.present? %>Cube <%= @now_playing.location.cube_location %>, <% end %>Section <%= @now_playing.location.name %>
                <% end %>
                <%= render partial: "now_playing/position_helper", locals: { now_playing: @now_playing } %>
                <% else %>
                 <%= link_to cd_collection_location_path(@now_playing.location), class: "italic text-xs text-gray-600 hover:text-gray-800 hover:underline mt-1 inline-block" do %>
                  <%= @now_playing.location.name %>
                 <%end%>
                <%end%>
            <% end %>
          </div>
          <div class="flex flex-col gap-2">
            <%= button_to "Done Playing", now_playing_done_path(@now_playing),
                class: "px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white font-medium rounded-lg transition-colors",
                data: { turbo: false } %>
            <div class="flex gap-2" data-controller="voting" data-voting-url-value="<%= now_playing_rate_path(@now_playing) %>">
              <button type="button"
                  data-action="click->voting#vote"
                  data-rating="meh"
                  data-active="false"
                  class="px-3 py-2 bg-amber-100 hover:bg-amber-200 text-amber-800 font-medium rounded-lg transition-all text-center">
                ü´§ <span class="text-xs" data-voting-target="mehCount">(<%= @now_playing.release&.meh_count || 0 %>)</span>
              </button>
              <button type="button"
                  data-action="click->voting#vote"
                  data-rating="thumbs_up"
                  data-active="false"
                  class="px-3 py-2 bg-green-100 hover:bg-green-200 text-green-800 font-medium rounded-lg transition-all text-center">
                üëç <span class="text-xs" data-voting-target="thumbsUpCount">(<%= @now_playing.release&.thumbs_up_count || 0 %>)</span>
              </button>
            </div>
          </div>
        </div>

        <!-- Inline Notes Editor -->
        <div class="mt-4 pt-4 border-t border-blue-200"
             data-controller="inline-edit"
             data-inline-edit-url-value="<%= now_playing_update_notes_path(@now_playing) %>">
          <!-- Display Mode -->
          <div data-inline-edit-target="display" class="group">
            <a href="#" data-action="click->inline-edit#edit" class="flex items-start gap-2 text-gray-600 hover:text-gray-900">
              <svg class="w-4 h-4 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
              </svg>
              <span data-notes-placeholder class="text-sm italic text-gray-400 <%= @now_playing.notes.present? ? 'hidden' : '' %>">
                Add notes about this album...
              </span>
              <span data-notes-text class="text-sm whitespace-pre-wrap <%= @now_playing.notes.blank? ? 'hidden' : '' %>"><%= @now_playing.notes %></span>
            </a>
          </div>

          <!-- Edit Mode -->
          <div data-inline-edit-target="form" class="hidden">
            <textarea data-inline-edit-target="input"
                      data-action="keydown->inline-edit#handleKeydown"
                      rows="3"
                      placeholder="Add notes about tracks, album, recording quality, etc..."
                      class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none"><%= @now_playing.notes %></textarea>
            <div class="flex justify-end gap-2 mt-2">
              <button type="button"
                      data-action="click->inline-edit#cancel"
                      class="px-3 py-1.5 text-sm text-gray-600 hover:text-gray-800 font-medium">
                Cancel
              </button>
              <button type="button"
                      data-action="click->inline-edit#save"
                      class="px-3 py-1.5 text-sm bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-md">
                Save
              </button>
            </div>
            <p class="text-xs text-gray-400 mt-1">Enter to save, Alt+Enter for new line, Esc to cancel</p>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Recently Played Section (older than 60 minutes) -->
  <% if @recently_played.any? %>
    <div class="mt-8">
      <h2 class="font-bold text-2xl mb-4 text-stone-700">Recently Played</h2>
      You've listened to <strong><%= @recently_played.count %></strong> albums over the past <strong><%= @day_play_counter %></strong> days for a total of <strong><%= duration_formatter(@recently_played_in_seconds) %></strong>.
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <% @recently_played.each do |item| %>
          <div data-controller="now-playing-card"
               data-now-playing-card-confirm-url-value="<%= now_playing_confirm_path(item) %>">
            <div class="relative p-4 bg-white rounded-lg shadow border border-gray-100 hover:shadow-md transition-shadow transition-opacity duration-300"
                 data-now-playing-card-target="card">
              <%= render partial: "close_confirm_buttons", locals: { media_item: item } %>

              <!-- Confirmation Modal -->
              <div data-now-playing-card-target="modal" class="hidden absolute inset-0 bg-black/50 rounded-lg flex items-center justify-center z-20">
                <div class="bg-white rounded-lg p-4 shadow-xl max-w-sm mx-4">
                  <p class="text-gray-800 font-medium text-center mb-3">Are you sure?</p>
                  <p class="text-gray-500 text-sm text-center mb-4">This will remove the album and undo the play count.</p>
                  <div class="flex gap-3 justify-center">
                    <button type="button"
                            data-action="click->now-playing-card#hideConfirm"
                            class="px-3 py-1.5 bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium rounded-lg transition-colors text-sm">
                      No
                    </button>
                    <button type="button"
                            data-action="click->now-playing-card#confirmDelete"
                            data-now-playing-card-url-param="<%= now_playing_delete_path(item) %>"
                            class="px-3 py-1.5 bg-red-500 hover:bg-red-600 text-white font-medium rounded-lg transition-colors text-sm">
                      Yes
                    </button>
                  </div>
                </div>
              </div>
            <div class="flex items-center gap-4">
              <div class="flex-shrink-0 relative group/cover">
                <%= link_to edit_media_item_path(item) do %>
                  <% if item.release&.cover_image&.attached? %>
                    <%= image_tag item.release.cover_image.variant(resize_to_limit: [80, 80]),
                        class: "w-20 h-20 object-cover rounded-md shadow" %>
                  <% else %>
                    <div class="w-20 h-20 bg-gray-200 rounded-md flex items-center justify-center">
                      <svg class="w-8 h-8 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M18 3a1 1 0 00-1.196-.98l-10 2A1 1 0 006 5v9.114A4.369 4.369 0 005 14c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V7.82l8-1.6v5.894A4.37 4.37 0 0015 12c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V3z"/>
                      </svg>
                    </div>
                  <% end %>
                <% end %>
                <!-- Hover details popup -->
                <div class="absolute left-full top-0 ml-4 z-20 opacity-0 invisible group-hover/cover:opacity-100 group-hover/cover:visible transition-all duration-200 pointer-events-none">
                  <%= render partial: "record_collection/media_item_hover_details", locals: { media_item: item } %>
                </div>
              </div>
              <div class="flex-1 min-w-0">
                <%= link_to edit_media_item_path(item), class: "block hover:text-gray-900" do %>
                  <h3 class="font-semibold text-lg truncate"><%= item.display_title || "Unknown Album" %></h3>
                  <p class="text-gray-600 truncate"><%= item.release&.media_owner&.name || "Unknown Artist" %></p>
                <% end %>                
                <p class="text-sm text-gray-400">
                  Played <%= time_ago_in_words(item.last_played) %> ago
                  <span class="mx-1">&middot;</span>
                  <%= pluralize(item.play_count || 0, "play") %>
                  <span class="mx-1">&middot;</span>
                  <% if item.media_type&.name == "CD" %>
                    <span title="CD">üíø</span>
                  <% else %>
                    <span title="Vinyl" class="inline-flex items-center justify-center w-5 h-5 bg-gray-600 text-white text-[10px] font-bold rounded-full align-middle">LP</span>
                  <% end %>
                </p>
                <% if item.location %>
                <% if item.media_type&.name == "Vinyl"  %>
                  <%= link_to record_collection_location_path(item.location), class: "italic text-xs text-gray-400 hover:text-gray-600 hover:underline" do %>
                    <% if item.location.cube_location.present? %>Cube <%= item.location.cube_location %>, <% end %>Section <%= item.location.name %>
                  <% end %>
                <% else %>
                 <%= link_to cd_collection_location_path(item.location), class: "italic text-xs text-gray-600 hover:text-gray-800 hover:underline mt-1 inline-block" do %>
                  <%= item.location.name %>
                 <%end%>
                <%end%>
                  
                <% end %>
              </div>
              <div class="flex flex-col gap-1" data-controller="voting" data-voting-url-value="<%= now_playing_rate_path(item) %>">
                <button type="button"
                    data-action="click->voting#vote"
                    data-rating="meh"
                    data-active="false"
                    class="px-3 py-1.5 bg-amber-100 hover:bg-amber-200 text-amber-800 font-medium rounded-lg transition-all text-center text-sm">
                  ü´§ <span class="text-xs" data-voting-target="mehCount">(<%= item.release&.meh_count || 0 %>)</span>
                </button>
                <button type="button"
                    data-action="click->voting#vote"
                    data-rating="thumbs_up"
                    data-active="false"
                    class="px-3 py-1.5 bg-green-100 hover:bg-green-200 text-green-800 font-medium rounded-lg transition-all text-center text-sm">
                  üëç <span class="text-xs" data-voting-target="thumbsUpCount">(<%= item.release&.thumbs_up_count || 0 %>)</span>
                </button>
              </div>
            </div>

            <!-- Inline Notes Editor -->
            <div class="mt-3 pt-3 border-t border-gray-100"
                 data-controller="inline-edit"
                 data-inline-edit-url-value="<%= now_playing_update_notes_path(item) %>">
              <!-- Display Mode -->
              <div data-inline-edit-target="display" class="group">
                <a href="#" data-action="click->inline-edit#edit" class="flex items-start gap-2 text-gray-500 hover:text-gray-700">
                  <svg class="w-3.5 h-3.5 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                  </svg>
                  <span data-notes-placeholder class="text-xs italic text-gray-400 <%= item.notes.present? ? 'hidden' : '' %>">
                    Add notes...
                  </span>
                  <span data-notes-text class="text-xs whitespace-pre-wrap <%= item.notes.blank? ? 'hidden' : '' %>"><%= item.notes %></span>
                </a>
              </div>

              <!-- Edit Mode -->
              <div data-inline-edit-target="form" class="hidden">
                <textarea data-inline-edit-target="input"
                          data-action="keydown->inline-edit#handleKeydown"
                          rows="2"
                          placeholder="Add notes..."
                          class="w-full px-2 py-1.5 text-xs border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none"><%= item.notes %></textarea>
                <div class="flex justify-end gap-2 mt-1.5">
                  <button type="button"
                          data-action="click->inline-edit#cancel"
                          class="px-2 py-1 text-xs text-gray-600 hover:text-gray-800 font-medium">
                    Cancel
                  </button>
                  <button type="button"
                          data-action="click->inline-edit#save"
                          class="px-2 py-1 text-xs bg-blue-600 hover:bg-blue-700 text-white font-medium rounded">
                    Save
                  </button>
                </div>
              </div>
            </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% elsif @now_playing.nil? %>
    <div class="text-center py-12 bg-gray-50 rounded-lg">
      <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="currentColor" viewBox="0 0 20 20">
        <path d="M18 3a1 1 0 00-1.196-.98l-10 2A1 1 0 006 5v9.114A4.369 4.369 0 005 14c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V7.82l8-1.6v5.894A4.37 4.37 0 0015 12c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V3z"/>
      </svg>
      <p class="text-gray-500 text-lg">No recently played albums</p>
      <p class="text-gray-400 mt-1">Search for an album above to start tracking your plays</p>
    </div>
  <% end %>
</div>
